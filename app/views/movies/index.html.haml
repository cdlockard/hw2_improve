-#  This file is app/views/movies/index.html.haml
%h2 All Movies
= form_tag movies_path, :id => "ratings_form",:method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, (@ratings_checked.include?(rating)), :id=>"ratings_#{rating}"
  = submit_tag 'Refresh', :id => "ratings_submit"
%table#movies
  %thead
    %tr
      %th{:id => "title", :class => @hilite_title}= link_to "Movie Title", movies_path({:sort=>"title", :ratings=>@checked_ratings_hash})
      %th Rating
      %th{:id => "title", :class => @hilite_release}= link_to "Release Date", movies_path({:sort=>"release_date", :ratings=>@checked_ratings_hash})
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

  =link_to 'Add a new movie', new_movie_path